<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="myCustomMenuTextAppearance" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:itemTextAppearance">@style/myCustomMenuTextAppearance</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionModeBackground">@color/accent_color</item>
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_fragment_home_dashboard_hamberger_menu</item>
        <item name="bottomSheetDialogTheme">@style/ModalBottomSheetDialog</item>
    </style>
    <!-- endregion -->

    <!-- Base application theme with Action Bar. -->
    <style name="AppThemeActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionModeBackground">@color/accent_color</item>
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_fragment_home_dashboard_hamberger_menu</item>
        <item name="bottomSheetDialogTheme">@style/ModalBottomSheetDialog</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>
    <!-- endregion -->

    <!-- Base application theme with Action Bar. -->
    <style name="ReportPageTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionModeBackground">@color/accent_color</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_fragment_home_dashboard_hamberger_menu</item>
        <item name="bottomSheetDialogTheme">@style/ModalBottomSheetDialog</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>
    <!-- endregion -->


    <!-- region Splash Screen Theme -->
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_default_splash_screen</item>
    </style>
    <!-- endregion -->

    <!-- region Base Styles -->
    <style name="AppTheme.RoundedCornerMaterialButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/btn_rounded</item>
    </style>
    <!-- endregion -->


    <style name="DialogTheme" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="android:textColorPrimary">@color/colorBlack</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/colorPrimary</item>
    </style>

    <style name="ModalBottomSheet" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="android:background">@drawable/bottomsheet_bg_top_rounded</item>
    </style>

    <style name="ModalBottomSheetDialog" parent="@style/Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/ModalBottomSheet</item>
    </style>

    <style name="DefaultNumberPickerTheme" parent="AppTheme">
        <item name="colorControlNormal">#E3E3E3</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="CustomAuto">
        <item name="android:paddingTop">13dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingBottom">13dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:textColor">#000</item>
    </style>
</resources>
