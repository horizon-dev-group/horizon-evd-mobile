<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_default_animated">

    <TextView
        android:id="@+id/fragment_app_intro_slide_3_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/app_intro_slide_3_title"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/fragment_app_intro_slide_3_animation_view_container"
        app:layout_constraintStart_toStartOf="@+id/fragment_app_intro_slide_3_animation_view_container"
        app:layout_constraintTop_toBottomOf="@+id/fragment_app_intro_slide_3_animation_view_container" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fragment_app_intro_slide_3_animation_view_container"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.20">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/fragment_app_intro_slide_3_animation_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleX="1.2"
            android:scaleY="1.2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.25"
            app:lottie_autoPlay="true"
            app:lottie_fileName="activity_app_intro_powerful.json"
            app:lottie_loop="true" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/fragment_app_intro_slide_3_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:paddingStart="24dp"
        android:paddingLeft="24dp"
        android:paddingEnd="24dp"
        android:paddingRight="24dp"
        android:text="@string/app_intro_slide_3_description"
        android:textColor="@color/colorWhite"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/fragment_app_intro_slide_3_title"
        app:layout_constraintStart_toStartOf="@+id/fragment_app_intro_slide_3_title"
        app:layout_constraintTop_toBottomOf="@+id/fragment_app_intro_slide_3_title" />

</androidx.constraintlayout.widget.ConstraintLayout>