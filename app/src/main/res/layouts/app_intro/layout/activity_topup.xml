<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.topup.topup"
    android:background="@drawable/bg_checkout">

    <TextView
        android:id="@+id/textView77"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Coming Soon"
        android:textColor="#FFFCFC"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextContact"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/edittext_bus_ticket_date_and_time"
        android:ems="10"
        android:hint="Phone Number"
        android:inputType="textPersonName|phone"
        android:padding="10dp"
        android:textColorHint="#FBF7F7"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@+id/contactPicker"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/contactPicker"
        style="@style/AppTheme.RoundedCornerMaterialButton"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="32dp"
        android:text="Choose"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/editTextContact"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/editTextContact"
        app:layout_constraintTop_toTopOf="@+id/editTextContact" />

    <Button
        android:id="@+id/sendBtn"
        style="@style/AppTheme.RoundedCornerMaterialButton"

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Send"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/contactPicker"
        app:layout_constraintStart_toStartOf="@+id/editTextContact"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumber" />

    <EditText
        android:id="@+id/editTextNumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/edittext_bus_ticket_date_and_time"

        android:ems="10"
        android:hint="Amount"
        android:inputType="number"
        android:padding="10dp"
        android:textColorHint="#FBF7F7"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/editTextContact"
        app:layout_constraintStart_toStartOf="@+id/editTextContact"
        app:layout_constraintTop_toBottomOf="@+id/editTextContact" />
</androidx.constraintlayout.widget.ConstraintLayout>