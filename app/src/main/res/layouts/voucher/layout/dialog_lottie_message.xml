        android:textColor="@color/colorPrimary"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialogLottieAnimation" />

    <TextView
        android:id="@+id/dialogLottieDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Description"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/dialogLottieTitle"
        app:layout_constraintStart_toStartOf="@+id/dialogLottieTitle"
        app:layout_constraintTop_toBottomOf="@+id/dialogLottieTitle" />

